{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "eofline": true, 
    "indent": [true, "spaces", 2],
    "no-bitwise": false,
    "no-console": false,
    "no-namespace": false,
    "max-classes-per-file": false,
    "quotemark": {
      "options": "single"
    },
    "semicolon": [true, "never"],
    "trailing-comma": [false],
    "whitespace": [true, "check-module"]
  },
  "rulesDirectory": []
}
